<div id ="post_content">
	<h1 class="title">
		<%= @post.title %>
	</h1>
	<p class ="date">
		<% if user_signed_in? %>
		<%= time_ago_in_words(@post.created_at)%> ago|<%=link_to 'Edit',edit_post_path(@post)%>|
		<%=link_to 'Delete',post_path(@post), method: :delete , confirm: {data: "Are you sure you want to delete?"} %>
		<% end %>
    </p>
    <p class="body">
    	<%= @post.body %>
    </p>

    <div class="comment">
    	<p><%= @post.comments.count%> </p>
    	
    	<h3>Join Discussion:</h3>
    	<%= render "comments/form" %>

    </div>

</div>
	
