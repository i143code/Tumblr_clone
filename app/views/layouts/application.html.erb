<!DOCTYPE html>
<html>
<head>
  <title>TumblerClone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', "//fonts.googleapis.com/css?family=Raleway:400,700" %>
  <%= favicon_link_tag 'favicon.ico' %>

  <%= csrf_meta_tags %>
</head>
<body>
	<!-- sideBar -->
	<div id="sidebar">
		<ul>
			<li class"category"><%=link_to "Tumblr",root_path%></li>
			<li><%=link_to "Posts",root_path%></li>
			<li>About</li>
		</ul>
		<p class="sign_in">User Login</p>
	</div>


	<div id="main_content">
		<div id="header">
			<p>Post Feeds</p>
			<div class="buttons">
				<button class="button"><%=link_to "New Post",new_post_path%></button>
				<button class="button">Log Out</button>
			</div>
		</div>
        
      <%= yield %>
      <% render 'layouts/message' %>

	</div>



</body>
</html>
